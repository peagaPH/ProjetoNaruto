                    <select class="form-control" name="EquipeID8" id="EquipeID8">
                        @foreach (var item in ViewBag.Batalhas)
                        {
                            <option value="null">Selecionar Oitava Equipe</option>
                            <option value="@item.ID">@item.Nome</option>
                        }
                    </select>
