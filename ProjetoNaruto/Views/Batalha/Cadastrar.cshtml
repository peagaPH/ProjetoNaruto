        <font face="njnaruto">

            <div class="form-group">
                <div class="col-md-10">
                    <select class="form-control" name="EquipeID1" id="EquipeID1">
                        @foreach (var item in ViewBag.Batalhas)
                        {
                            <option>Selecionar Primeira Equipe</option>
                            <option value="@item.ID">@item.Nome</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
