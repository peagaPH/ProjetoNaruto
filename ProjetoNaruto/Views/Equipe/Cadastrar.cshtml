
@{
    ViewData["Title"] = "Cadastrar";
}
<font face="njnaruto">
    <h1>Cadastro da Equipe</h1>
</font>

<div class="form-horizontal">
    <form method="post">
        <font face="njnaruto">
            
            <div class="form-group">
                <label class="control-label col-md-2">Nome da Equipe</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" name="Nome" id="Nome" required />
                    <span class="text-danger" id="erroNome" name="erroNome"></span>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Jounnin Da Equipe</label>
                <div class="col-md-10">
                    <select class="form-control" name="JounninID" id="JounninID">
                        @foreach (var item in ViewBag.Jounnins)
                        {
                            <option value="@item.ID">@item.Nome</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Primeiro Integrante</label>
                <div class="col-md-10">
                    <select class="form-control" name="GenninID1" id="GenninID1">
                        @foreach (var item in ViewBag.Gennins)
                        {
                            <option value="@item.ID">@item.Nome</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Segundo Integrante</label>
                <div class="col-md-10">
                    <select class="form-control" name="GenninID2" id="GenninID2">
                        @foreach (var item in ViewBag.Gennins)
                        {
                            <option value="@item.ID">@item.Nome</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Terceiro Integrante</label>
                <div class="col-md-10">
                    <select class="form-control" name="GenninID3" id="GenninID3">
                        @foreach (var item in ViewBag.Gennins)
                        {
                            <option value="@item.ID">@item.Nome</option>
                        }
                    </select>
                </div>
            </div>


            @if (ViewBag.ErroGenerico != null)
            {
                <div class="form-group">
                    <div class="col-md-10">
                        <span class="text-warning">@ViewBag.ErroGenerico</span>
                    </div>
                </div>
            }

            <div class="form-group">
                <div class="col-md-10">
                    <button class="newbutton red" name="BotaoEnviar" id="BotaoEnviar" type="submit">Cadastrar Equipe</button>
                </div>
            </div>
        </font>
    </form>
</div>

@section scripts {

    <script type="text/javascript">

        $(document).ready(function () {
            $("#BotaoEnviar").click(function (e) {

                var nome = $("#Nome").val();
                var gennin1 = $("#Gennin1").val();
                var gennin2 = $("#Gennin2").val();
                var gennin3 = $("#Gennin3").val();
                var jounnin = $("#Jounnin").val();

                var sucesso = true;

                if (nome == "") {
                    $("#erroNome").html("Nome deve ser informado.");
                    sucesso = false;
                }
                else if (nome.length < 5 || nome.length > 50) {
                    $("#erroNome").html("Nome deve conter entre 5 e 50 caracteres.");
                    sucesso = false;
                }
                else {
                    $("#erroNome").html("");
                }

                if (jounnin == "") {
                    $("#erroJounnin").html("Nome deve ser informado.");
                    sucesso = false;
                }
                else if (jounnin.length < 5 || jounnin.length > 50) {
                    $("#erroJounnin").html("Nome deve conter entre 5 e 50 caracteres.");
                    sucesso = false;
                }
                else {
                    $("#erroJounnin").html("");
                }

                if (gennin1 == "") {
                    $("#erroGennin1").html("Nome deve ser informado.");
                    sucesso = false;
                }
                else if (gennin1.length < 5 || gennin1.length > 50) {
                    $("#erroGennin1").html("Nome deve conter entre 5 e 50 caracteres.");
                    sucesso = false;
                }
                else {
                    $("#erroGennin1").html("");
                }

                if (gennin2 == "") {
                    $("#erroGennin2").html("Nome deve ser informado.");
                    sucesso = false;
                }
                else if (gennin2.length < 5 || gennin2.length > 50) {
                    $("#erroGennin2").html("Nome deve conter entre 5 e 50 caracteres.");
                    sucesso = false;
                }
                else {
                    $("#erroGennin2").html("");
                }

                if (gennin3 == "") {
                    $("#erroGennin3").html("Nome deve ser informado.");
                    sucesso = false;
                }
                else if (gennin3.length < 5 || gennin3.length > 50) {
                    $("#erroGennin3").html("Nome deve conter entre 5 e 50 caracteres.");
                    sucesso = false;
                }
                else {
                    $("#erroGennin3").html("");
                }

                if (!sucesso) {
                    e.preventDefault();
                }

            });
        });
    </script>
}
